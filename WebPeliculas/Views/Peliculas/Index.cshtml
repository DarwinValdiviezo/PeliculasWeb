@model IEnumerable<WebPeliculas.Models.Pelicula>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Nuevo</a>
</p>
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col" class="d-none d-md-table-cell">Nombre Película</th>
                <th scope="col" class="d-none d-md-table-cell">Precio</th>
                <th scope="col" class="d-none d-md-table-cell">Descripción</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row" class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.NombrePelicula)</td>
                    <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.Precio)</td>
                    <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.IdPelicula">Editar</a> |
                        <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.IdPelicula">Detalles</a> |
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdPelicula">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
